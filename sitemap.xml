---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.sitemaps.org/schemas/sitemap/0.9
            http://www.sitemaps.org/schemas/sitemap/0.9/sitemap.xsd"
        xmlns:xhtml="http://www.w3.org/1999/xhtml">
{% for page in site.pages %}
{% if page.sitemap != false %}  
  <url>
    <loc>{{ site.url }}{{ page.url | remove:'index.html' }}</loc>
  {% if page.lastmod != null %}
    <lastmod>{{ page.lastmod | date_to_xmlschema }}</lastmod>
  {% else %}
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
  {% endif %}
    <changefreq>monthly</changefreq>
  {% if page.priority != null %}
    <priority>{{ page.priority }}</priority>
  {% else %}
    <priority>0.8</priority>
  {% endif %}
  {% if page.pt != null %}
    <xhtml:link rel="alternate"
                hreflang="pl-PL"
                href="{{ site.url }}{{ page.pt }}" />
    <xhtml:link rel="alternate"
                hreflang="{{ page.language }}"
                href="{{ site.url }}{{ page.url | remove:'index.html' }}" />
  {% endif %}
  {% if page.en != null %}
    <xhtml:link rel="alternate"
                hreflang="en"
                href="{{ site.url }}{{ page.en }}" />
    <xhtml:link rel="alternate"
                hreflang="{{ page.language }}"
                href="{{ site.url }}{{ page.url | remove:'index.html' }}" />
  {% endif %}
  </url>
{% endif %}
{% endfor %}

{% for post in site.posts %}
  <url>
    <loc>{{ site.url }}{{ post.url }}</loc>
  {% if post.lastmod == null %}
    <lastmod>{{ post.date | date_to_xmlschema }}</lastmod>
  {% else %}
    <lastmod>{{ post.lastmod | date_to_xmlschema }}</lastmod>
  {% endif %}
    <changefreq>weekly</changefreq>
    <priority>0.7</priority>
  {% if post.pt != null %}
    <xhtml:link rel="alternate"
                hreflang="pl-PL"
                href="{{ site.url }}{{ post.pt }}" />
    <xhtml:link rel="alternate"
                hreflang="{{ post.language }}"
                href="{{ site.url }}{{ post.url | remove:'index.html' }}" />
  {% endif %}
  {% if post.en != null %}
    <xhtml:link rel="alternate"
                hreflang="en"
                href="{{ site.url }}{{ post.en }}" />
    <xhtml:link rel="alternate"
                hreflang="{{ post.language }}"
                href="{{ site.url }}{{ post.url | remove:'index.html' }}" />
  {% endif %}
  </url>
{% endfor %}
</urlset>